---
interface Props {
    href: string;
    icon: string;
    label: string;
    active?: boolean;
}
const { href, icon, label, active = false } = Astro.props;
---
<a 
    href={href}
    class:list={[
        "flex items-center gap-3 px-4 py-2 rounded text-background-dark dark:text-background-light/70 hover:bg-primary/10 dark:hover:bg-primary/20",
        { "bg-primary/20 dark:bg-primary/30 font-bold dark:text-background-light": active }
    ]}
>
    <span class="material-symbols-outlined">{icon}</span>
    <span class="text-sm font-medium">{label}</span>
</a>